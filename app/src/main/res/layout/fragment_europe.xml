<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".EuropeFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/Teal">

        <ImageView
            android:id="@+id/PerchImage"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="196dp"
            android:src="@drawable/okun" />

        <TextView
            android:id="@+id/FishName"
            android:layout_width="193dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="213dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="105dp"
            android:text="Fish name: Okun"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/PerchButton"
            android:layout_width="88dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="238dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="35dp"
            android:text="Learn" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center|end"
        android:background="@color/Teal"
        android:foregroundGravity="top"
        android:gravity="top">

        <!-- Add your views inside the RelativeLayout here -->

        <ImageView
            android:id="@+id/KarasPhoto"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="221dp"
            android:src="@drawable/karas" />

        <TextView
            android:id="@+id/FishNameKrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="108dp"
            android:text="Fish name: Karas"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/KarasButton"
            android:layout_width="88dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="34dp"
            android:text="Learn" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="34dp"
        android:background="@color/Teal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:src="@drawable/karp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="102dp"
            android:text="Fish name: Karp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/KarpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="24dp"
            android:text="Learn" />
    </RelativeLayout>
</FrameLayout>